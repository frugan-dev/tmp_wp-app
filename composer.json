{
  "name": "wordpress-plugin/wp-app",
  "description": "Wordpress plugin",
  "license": "GPL-3.0-or-later",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=8.2",
    "google/recaptcha": "^1.2",
    "php-di/php-di": "^7.0",
    "wp-spaghetti/wp-env": "^2.2",
    "wp-spaghetti/wp-logger": "^2.2",
    "wp-spaghetti/wp-vite": "^1.1"
  },
  "require-dev": {
    "ergebnis/composer-normalize": "^2.43",
    "friendsofphp/php-cs-fixer": "^3.64",
    "nikic/php-parser": "^5.5",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpro/grumphp-shim": "^2.17",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "povils/phpmnd": "^3.6",
    "rector/rector": "^2.1",
    "roave/security-advisories": "dev-latest",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "thecodingmachine/phpstan-safe-rule": "^1.3",
    "vimeo/psalm": "^6.13",
    "wpify/scoper": "^3.2"
  },
  "autoload": {
    "psr-4": {
      "WpApp\\": "src/"
    }
  },
  "config": {
    "allow-plugins": {
      "ergebnis/composer-normalize": true,
      "phpro/grumphp-shim": true,
      "phpstan/extension-installer": true,
      "wpify/scoper": true
    },
    "optimize-autoloader": true,
    "platform": {
      "php": "8.2.9999"
    },
    "sort-packages": true
  },
  "extra": {
    "wpify-scoper": {
      "folder": "vendor-deps",
      "prefix": "WpApp\\Vendor"
    }
  },
  "scripts": {
    "post-install-cmd": "@post-cmd",
    "post-update-cmd": "@post-cmd",
    "analysis": "@check --tasks=phpstan,psalm",
    "check": "@php -d max_execution_time=0 -d memory_limit=-1 -f ./vendor/bin/grumphp -- run",
    "ci": "@check --no-interaction",
    "lint": "@check --tasks=phpcsfixer,phplint,rector",
    "post-cmd": [
      "composer dump-autoload"
    ],
    "quality": "@check --tasks=phpmnd,phpparser",
    "rector": "@check --tasks=rector",
    "security": "@check --tasks=securitychecker_roave",
    "test": "@check --tasks=phpunit",
    "test:coverage": "vendor/bin/phpunit --coverage-clover=coverage.xml"
  }
}
