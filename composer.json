{
  "name": "wordpress-plugin/wp-app",
  "description": "Wordpress plugin",
  "license": "GPL-3.0-or-later",
  "type": "wordpress-plugin",
  "require": {
    "php": ">=8.0",
    "cweagans/composer-patches": "^1.7",
    "google/recaptcha": "^1.2",
    "inpsyde/wonolog": "2.x-dev",
    "php-di/php-di": "^7.0",
    "thecodingmachine/safe": "^2.5",
    "wecodemore/wordpress-early-hook": "^1.1.0",
    "wp-spaghetti/wp-env": "^2.2",
    "wp-spaghetti/wp-logger": "^2.2",
    "wp-spaghetti/wp-vite": "^1.1"
  },
  "require-dev": {
    "coenjacobs/mozart": "^0.7.1",
    "ergebnis/composer-normalize": "^2.43",
    "friendsofphp/php-cs-fixer": "^3.64",
    "nikic/php-parser": "^5.5",
    "php-parallel-lint/php-parallel-lint": "^1.4",
    "phpro/grumphp-shim": "^2.0",
    "phpstan/extension-installer": "^1.4",
    "phpstan/phpstan": "^2.1",
    "povils/phpmnd": "^3.6",
    "rector/rector": "^2.1",
    "roave/security-advisories": "dev-latest",
    "szepeviktor/phpstan-wordpress": "^2.0",
    "thecodingmachine/phpstan-safe-rule": "^1.3",
    "vimeo/psalm": "^0.3.14"
  },
  "autoload": {
    "psr-4": {
      "WpApp\\": "src/"
    },
    "files": [
      "include/aliases.php",
      "src/Dependencies/Inpsyde/Wonolog/inc/bootstrap.php"
    ]
  },
  "config": {
    "allow-plugins": {
      "cweagans/composer-patches": true,
      "ergebnis/composer-normalize": true,
      "phpro/grumphp-shim": true,
      "phpstan/extension-installer": true
    },
    "optimize-autoloader": true,
    "platform": {
      "php": "8.0.9999"
    },
    "sort-packages": true
  },
  "extra": {
    "mozart": {
      "classmap_directory": "/src/classes/dependencies/",
      "classmap_prefix": "WpApp_",
      "delete_vendor_directories": true,
      "dep_directory": "/src/Dependencies/",
      "dep_namespace": "WpApp\\Dependencies\\",
      "packages": [
        "inpsyde/wonolog"
      ]
    },
    "patches-file": "patches.json"
  },
  "scripts": {
    "post-install-cmd": "@post-cmd",
    "post-update-cmd": "@post-cmd",
    "analysis": "@check --tasks=phpstan,psalm",
    "check": "@php -d max_execution_time=0 -d memory_limit=-1 -f ./vendor/bin/grumphp -- run",
    "ci": "@check --no-interaction",
    "lint": "@check --tasks=phpcsfixer,phplint,rector",
    "post-cmd": [
      "@php pre-cmd.php",
      "[ $COMPOSER_DEV_MODE -eq 1 ] && \"vendor/bin/mozart\" compose || mozart compose",
      "@php post-cmd.php",
      "composer dump-autoload"
    ],
    "quality": "@check --tasks=phpmnd,phpparser",
    "rector": "@check --tasks=rector",
    "security": "@check --tasks=securitychecker_roave",
    "test": "@check --tasks=phpunit",
    "test:coverage": "vendor/bin/phpunit --coverage-clover=coverage.xml"
  }
}
